{
	"extends": "@lib/tooling/typescript",
	"compilerOptions": {
		"declaration": true, // Enable .d.ts file generation
		"outDir": "dist", // Directory for .js and .d.ts files
		"declarationMap": true, // Generate declaration maps (optional)
		"esModuleInterop": true, // Allow default imports from non-ES modules
		"jsx": "react-jsx", // Use React JSX Transform
		"verbatimModuleSyntax": true, // Enforce strict import/export type syntax
		"baseUrl": ".", // Ensure TypeScript resolves the paths correctly
		"paths": {
			"@/*": ["./src/*"], // Alias for src directory
			"@": ["./src"],
		}
	},
	"include": ["src/**/*", "_test/**/*", "build/**/*"], // Include all source files
	"exclude": ["node_modules"] // Exclude tests and node_modules
}
